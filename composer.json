{
	"name": "copacetic/test-printer",
	"description": "Make the console output useful while the tests are running.",
	"homepage": "https://github.com/copacetic-co/test-printer",
	"keywords": ["phpunit","php","unit test","resultprinter","formatter", "test printer"],
	"license": "MIT",
	"require": {
		"php": ">=5.4.0"
	},
	"autoload": {
		"classmap": [
			"src/Copacetic"
		]
	},
	"scripts": {
        "uninstall": [
        	"rm -rf vendor",
        	"rm -rf composer.lock"
        	],
        "build": [
        	"composer run-script uninstall",
        	"composer install --no-dev"
        	],
        "test": "phpunit",
        "coverage": [
            "rm -f tests-coverage",
            "mkdir tests-coverage",
            "phpunit --coverage-html ./tests-coverage"
        ]
    }
}
